<Window x:Class="GroupPrject.Items.ItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupPrject.Items"
        mc:Ignorable="d"
        Title="ItemsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgItems" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="51,31,400,157"/>
        <Button x:Name="btnAddItem" Content="Add Item" HorizontalAlignment="Left" Margin="451,217,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEditItem" Content="Edit Item" HorizontalAlignment="Left" Margin="451,257,0,0" VerticalAlignment="Top" Width="53"/>
        <Button x:Name="buttonDeleteItem" Content="Delete Item" HorizontalAlignment="Left" Margin="542,217,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSaveItem" Content="Save Item" HorizontalAlignment="Left" Margin="542,257,0,0" VerticalAlignment="Top" Width="65" Click="SaveItem"/>
        <Label Content="Code:" HorizontalAlignment="Left" Margin="459,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Cost:" HorizontalAlignment="Left" Margin="459,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="459,93,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
