<Window x:Class="GroupPrject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupPrject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Search" Click="OpenSearch"/>
            <MenuItem Header="Items" Click="OpenItems"/>
        </Menu>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="30">
                <Button Content="Create Invoice" Margin="0,0,20,0" Click="CreateInvoice"/>
                <Button Content="Edit Invoice" Margin="0,0,20,0"/>
                <Button Content="Save Invoice"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="30">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Invoice Date:"/>
                    <TextBlock x:Name="InvoiceDateBox" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Invoice Number:"/>
                    <TextBlock x:Name="InvoiceNumberBox"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Total Cost:"/>
                    <TextBlock x:Name="InvoiceCostBox"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="30,0,30,0">
                <StackPanel Margin="0,0,20,0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Label Content="Items:" Margin="0,0,20,0"/>
                        <ComboBox x:Name="ItemsDropdown" Width="150" Margin="0,0,20,0" SelectionChanged="ItemsDropdownSelectionChanged"/>
                        <Button x:Name="AddItemButton" Content="Add Item"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Cost:" Margin="0,0,20,0"/>
                        <Label x:Name="SelectedItemCostLabel" Width="150" Margin="0,0,20,0"/>
                        <Button x:Name="RemoveItemButton" Content="Remove Item"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <Label Content="Items on Invoice:"/>
                    <DataGrid x:Name="ItemsGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Width="400" Height="150"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
